source "https://rubygems.org"

# use activesupport to simplify time math
gem "activesupport"

# use puma as the webserver hosting sinatra
gem "puma"

# Use rest-client to make HTTP calls easier
gem "rest-client"

# use sinatra to make a simple web server
gem "sinatra"

# use sinatra-cross_origin for allowing calls from other domains
gem "sinatra-cross_origin", "~> 0.3.1"
